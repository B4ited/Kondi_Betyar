<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#04081E"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="-43dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#04081E"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/ib_menu"
                android:layout_width="71dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:scaleType="fitCenter"
                android:src="@android:drawable/ic_menu_sort_by_size" />

            <Button
                android:id="@+id/b_tavolsag"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_leiras"
                android:layout_width="match_parent"
                android:layout_height="131dp"
                android:text="Étrendek shopbuilder.hu
                 ajánlásával"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#FFFFFF" />


            <ImageButton
                android:id="@+id/ib_check"
                android:layout_width="match_parent"
                android:layout_height="61dp"
                android:background="#04081E"
                android:scaleType="fitCenter"
                app:srcCompat="@android:drawable/ic_search_category_default" />

            <Button
                android:id="@+id/b_tavolsag2"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_calculator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Testzsír százalékkalkulátor"
                android:textAlignment="center"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/et_súly"
                android:layout_width="136dp"
                android:layout_height="wrap_content"
                android:hint="Súly (kg):"
                android:numeric="integer"
                android:textColor="#FFFFFF"
                android:textColorHint="#7C7979"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/et_magassag"
                android:layout_width="219dp"
                android:layout_height="wrap_content"
                android:hint="Magasság (cm):"
                android:numeric="integer"
                android:textColor="#FFFFFF"
                android:textColorHint="#7C7979"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/radioGroup"
                android:layout_width="wrap_content"
                android:layout_height="113dp">

                <RadioButton
                    android:id="@+id/ferfi"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:buttonTint="#FFFFFF"
                    android:checked="true"
                    android:text="Férfi"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <RadioButton
                    android:id="@+id/no"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:buttonTint="#FFFFFF"
                    android:checked="false"
                    android:text="Nő"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

            </RadioGroup>

            <EditText
                android:id="@+id/et_kor"
                android:layout_width="169dp"
                android:layout_height="wrap_content"
                android:hint="Kor:"
                android:numeric="integer"
                android:textColor="#FFFFFF"
                android:textColorHint="#7C7979"
                android:textSize="20sp" />


            <Button
                android:id="@+id/b_sajat_edzes"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:text="Check" />

            <TextView
                android:id="@+id/tv_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="#B52E2E" />


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>